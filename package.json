{
  "name": "bugbank-cypress-tests",
  "version": "1.0.0",
  "description": "Testes automatizados E2E para aplicação BugBank usando Cypress",
  "main": "index.js",
  "scripts": {
    "cypress:open": "cypress open",
    "cypress:run": "cypress run",
    "cypress:run:chrome": "cypress run --browser chrome",
    "cypress:run:firefox": "cypress run --browser firefox",
    "test:smoke": "cypress run --spec '**/smoke/**'",
    "test:regression": "cypress run --spec '**/regression/**'",
    "test:functional": "cypress run --spec '**/functional/**'",
    "test:performance": "cypress run --spec '**/performance/**'",
    "report:generate": "mochawesome-merge cypress/reports/*.json > cypress/reports/merged-report.json && marge cypress/reports/merged-report.json --reportDir cypress/reports --inline",
    "test:ci": "cypress run --headless --browser electron",
    "test:parallel": "cypress run --record --parallel --ci-build-id $CI_BUILD_ID"
  },
  "devDependencies": {
    "cypress": "^13.3.0",
    "@cypress/xpath": "^2.0.1",
    "cypress-commands": "^2.0.1",
    "cypress-file-upload": "^5.0.8",
    "cypress-localstorage-commands": "^2.2.3",
    "cypress-multi-reporters": "^1.6.3",
    "cypress-terminal-report": "^5.3.2",
    "mochawesome": "^7.1.3",
    "mochawesome-merge": "^4.3.0",
    "mochawesome-report-generator": "^6.2.0"
  },
  "dependencies": {},
  "keywords": [
    "cypress",
    "e2e",
    "testing",
    "automation",
    "bugbank"
  ],
  "author": "Leonardo Augusto P. da Silva",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/seu-usuario/bugbank-cypress-tests.git"
  }
}